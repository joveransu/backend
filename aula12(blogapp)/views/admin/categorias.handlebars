<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card=body" style="padding: 5px;">
            <h4>{{nome}}</h4>
            <p>Slug: {{slug}}</p>
            <p>Criado em {{date}}</p>
        </div>
    </div>
{{else}}

{{/each}}